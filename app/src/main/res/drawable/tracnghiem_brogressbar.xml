<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu nền -->
            <corners android:radius="20dp"/> <!-- Bo tròn góc -->
            <stroke
                android:width="1dp"
                android:color="@color/black"/> <!-- Viền cho thanh tiến trình -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/v_progress_bar"/> <!-- Màu thanh tiến trình -->
                <corners android:radius="20dp"/> <!-- Bo tròn góc -->
                <stroke
                    android:width="1dp"
                    android:color="@color/black"/>
            </shape>
        </clip>
    </item>
</layer-list>